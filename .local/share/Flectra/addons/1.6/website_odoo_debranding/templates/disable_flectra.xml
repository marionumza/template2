<?xml version="1.0" encoding="UTF-8"?>
<flectra>

    <!-- Remove "Create a free website with Flectra" -->
    <template id="layout_footer_copyright"
              inherit_id="website.layout_footer_copyright"
              customize_show="True"
              name="Remove Flectra Promotional Link"
              priority="20">
        <xpath expr="//div[hasclass('pull-right')]" position="replace">
            <div class="pull-right"/>
        </xpath>
    </template>

</flectra>
